---
const {
  title = "Morse Code Generator",
  description = "Translate text to Morse code instantly, learn the alphabet, and practice common phrases.",
} = Astro.props;

const site =
  Astro.site?.toString().replace(/\/$/, "") ?? "https://morsecodegenerator.com";
const path = Astro.url.pathname || "/";
const canonical = `${site}${path === "/" ? "/" : path}`;

const jsonLd = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": `${site}#org`,
      name: "MorseCodeGenerator.com",
      url: site,
      email: "morsecodegenerator@gmail.com",
    },
    {
      "@type": "WebSite",
      "@id": `${site}#website`,
      url: site,
      name: "Morse Code Generator",
      publisher: { "@id": `${site}#org` },
      potentialAction: {
        "@type": "SearchAction",
        target: `${site}/translate/?q={search_term_string}`,
        "query-input": "required name=search_term_string",
      },
    },
  ],
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    <meta name="robots" content="index,follow" />

    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="alternate icon" href="/favicon.ico" />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:type" content="website" />

    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <meta name="application-name" content="Morse Code Generator" />
    <script type="application/ld+json">{JSON.stringify(jsonLd)}</script>

    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7616383336440831"
      crossorigin="anonymous"
    ></script>

    <script async src="https://www.googletagmanager.com/gtag/js?id=G-1K9JZ9ZQ2L"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-1K9JZ9ZQ2L', { anonymize_ip: true });
    </script>
  </head>

  <body>
    <header class="site-header">
      <div class="wrap header-inner">
        <a class="brand" href="/">MorseCodeGenerator.com</a>

        <nav class="nav" aria-label="Primary">
          <a class="nav-link" href="/translate/">Translate</a>
          <a class="nav-link" href="/morse-code/a/">Alphabet</a>
          <a class="nav-link" href="/phrases/sos/">Phrases</a>
          <a class="nav-link" href="/about/">About</a>
          <a class="nav-link nav-cta" href="mailto:morsecodegenerator@gmail.com">Contact</a>
        </nav>
      </div>
    </header>

    <main class="wrap main">
      <div class="panel">
        <slot />
      </div>
    </main>

    <footer class="site-footer">
      <div class="wrap foot-inner">
        <small class="foot-text">
          © {new Date().getFullYear()} MorseCodeGenerator.com • Free Morse translator, references & learning tools
        </small>
        <a class="foot-contact" href="mailto:morsecodegenerator@gmail.com">morsecodegenerator@gmail.com</a>
      </div>
    </footer>

    <style>
      :root{
        color-scheme: light dark;

        --bg:#0b0b0b;
        --panelA: rgba(255,255,255,0.05);
        --panelB: rgba(255,255,255,0.025);
        --border: rgba(255,255,255,0.10);
        --border2: rgba(255,255,255,0.16);

        --text: rgba(255,255,255,0.92);
        --muted: rgba(255,255,255,0.74);

        --accent: #8ab4ff;
        --accentBg: rgba(138,180,255,0.16);

        --shadow: 0 18px 60px rgba(0,0,0,0.55);
        --radius: 18px;
      }

      * { box-sizing: border-box; }
      html, body { height: 100%; }
      body{
        margin: 0;
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        line-height: 1.65;
        color: var(--text);
        background:
          radial-gradient(1200px 650px at 50% -10%, rgba(138,180,255,0.12), transparent 60%),
          radial-gradient(900px 500px at 15% 10%, rgba(255,255,255,0.06), transparent 55%),
          var(--bg);
      }

      a { color: var(--accent); text-underline-offset: 3px; }
      a:hover { opacity: .92; }

      .wrap{
        max-width: 1120px;
        margin: 0 auto;
        padding: 18px 18px;
      }

      /* HEADER */
      .site-header{
        position: sticky;
        top: 0;
        z-index: 30;
        backdrop-filter: blur(10px);
        background: rgba(11,11,11,0.78);
        border-bottom: 1px solid var(--border);
      }

      .header-inner{
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 14px;
      }

      .brand{
        font-weight: 800;
        letter-spacing: .2px;
        text-decoration: none;
        color: var(--text);
        white-space: nowrap;
      }

      .nav{
        display: flex;
        align-items: center;
        gap: 10px;
        flex-wrap: nowrap;
      }

      .nav-link{
        text-decoration: none;
        color: var(--text);
        padding: 9px 12px;
        border-radius: 999px; /* pill */
        border: 1px solid var(--border);
        background: rgba(255,255,255,0.02);
        transition: transform .08s ease, background .12s ease, border-color .12s ease;
      }
      .nav-link:hover{
        background: rgba(255,255,255,0.05);
        border-color: rgba(255,255,255,0.18);
      }
      .nav-link:active{ transform: translateY(1px); }

      /* CTA still consistent, just slightly accented */
      .nav-link.nav-cta{
        border-color: rgba(138,180,255,0.45);
        background: var(--accentBg);
      }

      /* MAIN PANEL */
      .main{
        padding-top: 22px;
        padding-bottom: 22px;
      }

      .panel{
        width: 100%;
        background: linear-gradient(to bottom, var(--panelA), var(--panelB));
        border: 1px solid var(--border);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        padding: 22px;
      }

      /* TYPOGRAPHY */
      h1{ font-size: clamp(28px, 4vw, 40px); line-height: 1.15; margin: 0 0 10px; }
      h2{ margin: 22px 0 10px; line-height: 1.2; }
      p{ margin: 10px 0; }
      .muted { color: var(--muted); }
      .k { font-family: ui-monospace, SFMono-Regular, Menlo, monospace; }

      /* CARDS & GRID */
      .card{
        border: 1px solid var(--border);
        border-radius: 16px;
        padding: 16px;
        background: rgba(255,255,255,0.02);
      }

      .grid{
        display: grid;
        grid-template-columns: 1fr;
        gap: 14px;
      }

      @media (min-width: 900px){
        .grid{ grid-template-columns: 1fr 1fr; } /* fixes the “empty right side” feel */
      }

      /* FORMS */
      textarea, input{
        width: 100%;
        padding: 12px 12px;
        border-radius: 14px;
        border: 1px solid var(--border2);
        background: rgba(0,0,0,0.18);
        color: var(--text);
        outline: none;
      }
      textarea::placeholder, input::placeholder{ color: rgba(255,255,255,0.55); }

      /* IMPORTANT: stop ugly corner-resize breaking layout */
      textarea{ resize: vertical; } /* or change to 'none' if you prefer */

      textarea:focus, input:focus{
        border-color: rgba(138,180,255,0.55);
        box-shadow: 0 0 0 4px rgba(138,180,255,0.12);
      }

      button{
        padding: 10px 12px;
        border-radius: 14px;
        border: 1px solid rgba(138,180,255,0.45);
        background: var(--accentBg);
        color: var(--text);
        cursor: pointer;
        font-weight: 650;
        transition: transform .08s ease, opacity .12s ease;
      }
      button:hover{ opacity: .96; }
      button:active{ transform: translateY(1px); }

      /* FOOTER */
      .site-footer{
        border-top: 1px solid var(--border);
        margin-top: 22px;
        padding-bottom: 26px;
      }

      .foot-inner{
        display: flex;
        flex-wrap: wrap;
        gap: 10px 16px;
        align-items: center;
        justify-content: space-between;
      }

      .foot-text{ color: rgba(255,255,255,0.72); }

      .foot-contact{
        color: var(--accent);
        text-decoration: none;
        padding: 9px 12px;
        border-radius: 999px;
        border: 1px solid var(--border);
        background: rgba(255,255,255,0.02);
      }

      /* MOBILE */
      @media (max-width: 720px){
        .wrap{ padding: 14px; }
        .panel{ padding: 16px; }
        .header-inner{ align-items: flex-start; flex-direction: column; }

        /* nav becomes horizontal scroll instead of ugly wraps */
        .nav{
          width: 100%;
          overflow-x: auto;
          -webkit-overflow-scrolling: touch;
          padding-bottom: 6px;
        }
        .nav-link{ white-space: nowrap; }
      }
    </style>
  </body>
</html>
