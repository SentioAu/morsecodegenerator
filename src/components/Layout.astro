---
const {
  title = "Morse Code Generator",
  description = "Translate text to Morse code instantly, learn the alphabet, and practice common phrases.",
} = Astro.props;

const site =
  Astro.site?.toString().replace(/\/$/, "") ?? "https://morsecodegenerator.com";
const path = Astro.url.pathname || "/";
const canonical = `${site}${path === "/" ? "/" : path}`;

// Minimal JSON-LD to help SEO + AI systems understand the site
const jsonLd = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": `${site}#org`,
      name: "MorseCodeGenerator.com",
      url: site,
      email: "morsecodegenerator@gmail.com",
    },
    {
      "@type": "WebSite",
      "@id": `${site}#website`,
      url: site,
      name: "Morse Code Generator",
      publisher: { "@id": `${site}#org` },
      potentialAction: {
        "@type": "SearchAction",
        target: `${site}/translate/?q={search_term_string}`,
        "query-input": "required name=search_term_string",
      },
    },
  ],
};
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />

    <meta name="robots" content="index,follow" />

    <!-- Favicon -->
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <link rel="alternate icon" href="/favicon.ico" />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:type" content="website" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <meta name="application-name" content="Morse Code Generator" />
    <script type="application/ld+json">{JSON.stringify(jsonLd)}</script>

    <!-- Google AdSense (loader only) -->
    <script
      async
      src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7616383336440831"
      crossorigin="anonymous"
    ></script>

    <!-- GA4 -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-1K9JZ9ZQ2L"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-1K9JZ9ZQ2L', { anonymize_ip: true });
    </script>
  </head>

  <body>
    <header class="site-header">
      <div class="wrap header-inner">
        <a class="brand" href="/">MorseCodeGenerator.com</a>

        <nav class="nav" aria-label="Primary">
          <a class="nav-link" href="/translate/">Translate</a>
          <a class="nav-link" href="/morse-code/a/">Alphabet</a>
          <a class="nav-link" href="/phrases/sos/">Phrases</a>
          <a class="nav-link contact" href="mailto:morsecodegenerator@gmail.com">Contact</a>
        </nav>
      </div>
    </header>

    <main class="wrap">
      <div class="panel">
        <slot />
      </div>
    </main>

    <footer class="site-footer">
      <div class="wrap foot-inner">
        <small class="foot-text">
          © {new Date().getFullYear()} MorseCodeGenerator.com • Free Morse translator, references & learning tools
        </small>
        <a class="foot-contact" href="mailto:morsecodegenerator@gmail.com">morsecodegenerator@gmail.com</a>
      </div>
    </footer>

    <style>
      :root {
        color-scheme: light dark;
        --bg: #0b0b0b;
        --panel: rgba(255,255,255,0.035);
        --panel2: rgba(255,255,255,0.02);
        --border: rgba(255,255,255,0.10);
        --border2: rgba(255,255,255,0.14);
        --text: rgba(255,255,255,0.92);
        --muted: rgba(255,255,255,0.78);
        --accent: #8ab4ff;
        --accentBg: rgba(138,180,255,0.14);
        --shadow: 0 10px 30px rgba(0,0,0,0.35);
      }

      * { box-sizing: border-box; }
      html, body { height: 100%; }

      body {
        font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif;
        margin: 0;
        line-height: 1.6;
        background: radial-gradient(1200px 600px at 50% -10%, rgba(138,180,255,0.10), transparent 60%),
                    var(--bg);
        color: var(--text);
      }

      a { color: var(--accent); text-underline-offset: 3px; }
      a:hover { opacity: 0.92; }

      .wrap {
        max-width: 1040px;
        margin-left: auto;
        margin-right: auto;
        padding: 20px;
      }

      /* Header */
      .site-header {
        position: sticky;
        top: 0;
        z-index: 20;
        backdrop-filter: blur(10px);
        background: rgba(11,11,11,0.72);
        border-bottom: 1px solid var(--border);
      }

      .header-inner {
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 14px;
      }

      .brand {
        font-weight: 750;
        letter-spacing: 0.2px;
        text-decoration: none;
        color: var(--text);
        white-space: nowrap;
      }

      .nav {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        justify-content: flex-end;
        align-items: center;
      }

      .nav-link {
        text-decoration: none;
        color: var(--text);
        padding: 8px 10px;
        border-radius: 10px;
        border: 1px solid transparent;
      }

      .nav-link:hover {
        border-color: var(--border);
        background: rgba(255,255,255,0.04);
      }

      .nav-link.contact {
        border-color: rgba(138,180,255,0.35);
        background: var(--accentBg);
        color: var(--text);
      }

      /* Main panel (fixes “left shift” feel) */
      .panel {
        background: linear-gradient(to bottom, var(--panel), var(--panel2));
        border: 1px solid var(--border);
        border-radius: 18px;
        box-shadow: var(--shadow);
        padding: 22px;
      }

      /* Shared UI */
      textarea, input {
        width: 100%;
        padding: 12px 12px;
        border-radius: 12px;
        border: 1px solid var(--border2);
        background: rgba(0,0,0,0.15);
        color: var(--text);
      }

      textarea::placeholder, input::placeholder { color: rgba(255,255,255,0.55); }

      button {
        padding: 10px 12px;
        border-radius: 12px;
        border: 1px solid rgba(138,180,255,0.35);
        background: var(--accentBg);
        color: var(--text);
        cursor: pointer;
        font-weight: 600;
      }
      button:hover { opacity: 0.95; }

      .card {
        border: 1px solid var(--border);
        border-radius: 16px;
        padding: 16px;
        background: rgba(255,255,255,0.02);
      }

      .grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 14px;
      }

      @media (min-width: 860px) {
        .grid { grid-template-columns: 1.2fr .8fr; }
      }

      .muted { color: var(--muted); }
      .k { font-family: ui-monospace, SFMono-Regular, Menlo, monospace; }

      /* Footer */
      .site-footer {
        border-top: 1px solid var(--border);
        margin-top: 26px;
        padding-bottom: 30px;
      }

      .foot-inner {
        display: flex;
        flex-wrap: wrap;
        gap: 10px 16px;
        align-items: center;
        justify-content: space-between;
      }

      .foot-text { color: rgba(255,255,255,0.72); }
      .foot-contact {
        color: var(--accent);
        text-decoration: none;
        padding: 8px 10px;
        border-radius: 10px;
        border: 1px solid var(--border);
        background: rgba(255,255,255,0.02);
      }

      /* Mobile improvements */
      @media (max-width: 640px) {
        .wrap { padding: 14px; }
        .panel { padding: 16px; }
        .header-inner { align-items: flex-start; }
        .nav { justify-content: flex-start; }
      }
    </style>
  </body>
</html>
